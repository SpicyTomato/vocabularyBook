<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/chineseMeaning_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsadsad"
        app:layout_constraintBottom_toTopOf="@+id/englishMeaning_d"
        app:layout_constraintEnd_toEndOf="@+id/example_d"
        app:layout_constraintStart_toStartOf="@+id/example_d"
        app:layout_constraintTop_toBottomOf="@+id/example_d" />

    <TextView
        android:id="@+id/englishMeaning_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsadsad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chineseMeaning_d"
        app:layout_constraintStart_toStartOf="@+id/chineseMeaning_d"
        app:layout_constraintTop_toBottomOf="@+id/chineseMeaning_d" />

    <TextView
        android:id="@+id/example_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsadsad"
        app:layout_constraintBottom_toTopOf="@+id/chineseMeaning_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>